{
  "name": "@xibang/node-common",
  "version": "1.0.2",
  "description": "Node.js 通用类",
  "main": "src/index.js",
  "engines": {
    "node": ">= 7.3.0"
  },
  "scripts": {
    "compile": "./node_modules/.bin/jsdoc --configure .jsdoc.json && node ./src/compiler",
    "prepare": "npm run compile",
    "test": "nyc ava -vs",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov | codecov",
    "start": "nyc --reporter html ava -vs && open ./.nyc_output/index.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xibang/node-common.git"
  },
  "keywords": [
    "api",
    "sdk",
    "open",
    "common"
  ],
  "ava": {
    "files": [
      "test/**/*.js",
      "!**/_*/*.js",
      "!**/_*.js"
    ]
  },
  "nyc": {
    "lines": 80,
    "check-coverage": true,
    "reporter": [
      "text-lcov"
    ],
    "report-dir": "./.nyc_output",
    "exclude": [
      "test",
      "test{,-*}.js",
      "**/*.test.js",
      "**/__tests__/**"
    ]
  },
  "author": "Willin Wang",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/xibang/node-common/issues"
  },
  "homepage": "https://github.com/xibang/node-common#readme",
  "devDependencies": {
    "ava": "^0.22.0",
    "cheerio": "^0.20.0",
    "codecov": "^2.3.0",
    "eslint": "^4.7.1",
    "eslint-config-willin": "*",
    "eslint-plugin-import": "^2.17.2",
    "jsdoc": "^3.5.5",
    "nyc": "^11.2.1",
    "to-markdown": "^3.0.0"
  },
  "dependencies": {
    "uuid": "*"
  }
}
